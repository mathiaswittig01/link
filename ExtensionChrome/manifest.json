{
  "manifest_version": 3,
  "name": "Link Saver",
  "version": "1.0",
  "permissions": [
    "contextMenus",
    "downloads",
    "tabs",
    "notifications"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "icons/icon_128.png",
    "default_title": "Save Link",
    "default_popup": "popup/save.html"
  },
  "commands": {
    "saveLink": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "Save Link"
    }
  },
  "icons": {
    "128": "icons/icon_128.png"
  }
}
